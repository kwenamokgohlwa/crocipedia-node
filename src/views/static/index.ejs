<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/head.ejs %>
  </head>
  <body>

      <!-- Navigation -->
      <% include ./partials/navbar.ejs %>

      <!-- Page Content -->
      <main class="container">

        <% include ../static/partials/messages.ejs %>

        <!-- Jumbotron Header -->
        <header class="jumbotron my-4">
          <h3 class="display-3">Crocipedia</h3>
          <p class="lead">Social, Markdown Wikis</p>
          <p class="lead">Create and share Markdown Wikis</p>
          <% if(currentUser) { %>
            <a href="/wikis" class="btn btn-primary btn-lg">Wikis</a>
          <% } else { %>
            <a href="/users/signup" class="btn btn-primary btn-lg">Sign Up</a>
            <a href="/users/signin" class="btn btn-primary btn-lg">Sign In</a>
          <% } %>

        </header>

        <!-- Page Features -->
        <section class="row text-center">

          <section class="col-lg-4">
            <h4 class="card-title">Free Plan</h4>
            <p class="card-text">Create as many public wikis as you want!</p>
          </section>

          <section class="col-lg-4">
            <h4 class="card-title">Premium Plan</h4>
            <p class="card-text">Create private wikis!</p>
          </section>

        </section>
        <!-- /.row -->

      </main>
      <!-- /.container -->

      <% include ./partials/baseScripts.ejs %>
    </body>
</html>
